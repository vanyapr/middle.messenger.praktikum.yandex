{
  "name": "messenger",
  "version": "1.1.0",
  "description": "Yandex Praktikum messenger project",
  "engines": {
    "node": "16.13.1"
  },
  "targets": {
    "main": false,
    "default": {
      "distDir": "./build"
    }
  },
  "scripts": {
    "start": "nodemon index.js",
    "dev": "webpack serve --mode=development --progress",
    "lint": "eslint .",
    "test": "mocha -require @babel/register",
    "build": "rimraf ./build && webpack && docker build -t messenger ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all test lint:all",
      "pre-push": "npm run build"
    }
  },
  "author": "Ivan Proksuriakov",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "7.16.8",
    "@babel/register": "7.16.9",
    "@types/chai": "4.3.0",
    "@types/jsdom": "16.2.14",
    "@types/mocha": "9.0.0",
    "@types/node": "17.0.8",
    "@types/sinon": "10.0.6",
    "@types/webpack": "5.28.0",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "5.9.1",
    "autoprefixer": "10.4.2",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.3",
    "chai": "4.3.4",
    "css-loader": "6.5.1",
    "cssnano": "5.0.15",
    "cssnano-preset-advanced": "5.1.10",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "file-loader": "6.2.0",
    "html-loader": "3.1.0",
    "html-webpack-plugin": "5.5.0",
    "husky": "^7.0.4",
    "jsdom": "19.0.0",
    "mini-css-extract-plugin": "2.4.5",
    "mocha": "9.1.4",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "6.2.1",
    "rimraf": "^3.0.2",
    "sass": "1.48.0",
    "sass-loader": "12.4.0",
    "sinon": "12.0.1",
    "style-loader": "3.3.1",
    "stylelint": "14.2.0",
    "stylelint-config-standard": "24.0.0",
    "stylelint-csstree-validator": "2.0.0",
    "stylelint-scss": "4.1.0",
    "svg-url-loader": "7.1.1",
    "ts-loader": "9.2.6",
    "ts-node": "10.4.0",
    "typescript": "4.5.4",
    "uuid": "8.3.2",
    "webpack": "5.66.0",
    "webpack-cli": "4.9.1",
    "webpack-dev-server": "4.7.3",
    "webpack-merge": "5.8.0"
  },
  "dependencies": {
    "connect-history-api-fallback": "1.6.0",
    "express": "4.17.2",
    "nanoid": "3.1.32",
    "nodemon": "2.0.15",
    "uuid": "8.3.2"
  }
}
